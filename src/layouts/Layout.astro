---
import '../styles/global.css'
// src/layouts/Layout.astro
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Yatish Shirsath - Strategic Design Manager" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 text-slate-900 font-['Inter'] antialiased selection:bg-indigo-100 selection:text-indigo-700">
		
		<nav class="fixed top-0 w-full bg-slate-50/80 backdrop-blur-md z-50 border-b border-slate-200/50">
			<div class="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
				<a href="/" class="text-lg font-bold tracking-tight hover:text-indigo-600 transition-colors">
					Yatish
				</a>
				<div class="flex gap-8 text-sm font-medium text-slate-600">
					{['Work', 'About', 'Contact'].map((item) => (
						<a 
                            href={
                                item === 'Contact' ? '#footer' : 
                                item === 'Work' ? '/#work' : 
                                `/${item.toLowerCase()}`
                            } 
                            class="relative group py-1"
                        >
							<span class="group-hover:text-slate-900 transition-colors">{item}</span>
							<span class="absolute bottom-0 left-0 w-0 h-0.5 bg-indigo-600 transition-all duration-300 group-hover:w-full"></span>
						</a>
					))}
				</div>
			</div>
		</nav>

		<main class="min-h-screen pt-20">
			<slot />
		</main>

		<footer id="footer" class="bg-white border-t border-slate-200 mt-20 pb-10">
			<div class="max-w-5xl mx-auto px-6 py-16">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					
					<div>
						<h3 class="text-2xl font-bold mb-4 text-slate-900">Let's build something scalable.</h3>
						<p class="text-slate-600 mb-6 max-w-sm">
							Open to discussing design strategy, 0 to 1 scale, and digital transformation.
						</p>
						<a href="mailto:yatish.designer@gmail.com" class="text-lg font-bold text-indigo-600 border-b-2 border-transparent hover:border-indigo-600 transition-all">
							yatish.designer@gmail.com
						</a>
					</div>

					<div class="flex flex-col gap-4 md:items-end">
						<span class="text-slate-400 text-sm uppercase tracking-wider font-bold text-[10px]">Connect</span>
						
