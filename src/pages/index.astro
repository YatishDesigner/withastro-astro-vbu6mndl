---
import Layout from '../layouts/Layout.astro';

// Define data for brand logos
const brands = [
  { name: 'Westside', logo: '/images/brands/westside.svg' },
  { name: 'Samoh', logo: '/images/brands/samoh.svg' },
  { name: 'Trent', logo: '/images/brands/trent.svg' },
  { name: 'Luca Faloni', logo: '/images/brands/luca-faloni.svg' },
  { name: 'Vara Group', logo: '/images/brands/vara.svg' },
  { name: 'Global Logic', logo: '/images/brands/global-logic.svg' },
  { name: 'Altisource', logo: '/images/brands/altisource.svg' },
  { name: 'Burnt Toast', logo: '/images/brands/burnt-toast.svg' },
  { name: 'Brunel University', logo: '/images/brands/brunel.svg' },
];

// Define data for the 3 selected projects
const projects = [
  {
    title: "Omnichannel Strategy for TATA",
    client: "Westside",
    description: "Revamping the digital touchpoints for a premium fashion brand, unifying the experience for millions.",
    image: "/images/home/westside-thumb.png",
    link: "/work/westside",
    tags: ["Strategy", "Design System"],
    color: "hover:text-indigo-600"
  },
  {
    title: "Zero-to-Live Luxury Launch",
    client: "Samoh",
    description: "Owning the full UX roadmap and responsive architecture for TATA's newest luxury label.",
    image: "/images/home/samoh-thumb.png",
    link: "/work/samoh",
    tags: ["E-commerce", "0-to-1"],
    color: "hover:text-pink-600"
  },
  {
    title: "Scaling SaaS for 100+ Engineers",
    client: "Vara Group",
    description: "Designing a complex device management platform that served as the foundational infrastructure.",
    image: "/images/home/vara-thumb.png",
    link: "/work/vara-group",
    tags: ["SaaS", "Complex Systems"],
    color: "hover:text-blue-600"
  }
];
---

<Layout title="Yatish Shirsath | UI-UX Design Manager">
  <style>
    /* Existing ticker animation for brands */
    @keyframes scroll {
      0% { transform: translateX(0); }
      100% { transform: translateX(-100%); }
    }
    .animate-scroll {
      animation: scroll 40s linear infinite;
    }
    
    /* NEW: Slower animation for large project cards */
    .animate-scroll-heavy {
      /* Moves to -50% because we duplicate the list once */
      animation: scroll 60s linear infinite;
    }
    /* Pause animation on hover for readability */
    .hover\:pause:hover .animate-scroll-heavy,
    .hover\:pause:hover .animate-scroll {
      animation-play-state: paused;
    }
  </style>
    
    <section class="max-w-5xl mx-auto px-6 py-24 md:py-32 relative">
        <div class="absolute top-10 right-0 w-96 h-96 bg-indigo-100/50 rounded-full blur-3xl -z-10 opacity-60 mix-blend-multiply animate-pulse"></div>

        <span class="inline-block py-1 px-3 rounded-full bg-indigo-50 text-indigo-600 font-bold tracking-wider text-xs uppercase mb-6 border border-indigo-100">
            UI-UX Design Manager
        </span>
        <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-8 max-w-3xl text-slate-900">
            Driving <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-violet-600">Digital transformation</span> for enterprise brands.
        </h1>
        <p class="text-xl text-slate-600 max-w-2xl leading-relaxed mb-12">
            8+ years experience merging business strategy with user needs. 
            Specialist in 0-to-1 launches for brands like <strong class="text-slate-900">TATA Trent, Luca Faloni</strong> and <strong class="text-slate-900">Vara Group</strong>.
        </p>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 border-t border-slate-100 pt-8">
            <div class="group cursor-default">
                <span class="block text-3xl font-bold text-slate-900 group-hover:text-indigo-600 transition-colors">10+</span>
                <span class="text-sm text-slate-500">Business Impacted</span>
            </div>
            <div class="group cursor-default">
                <span class="block text-3xl font-bold text-slate-900 group-hover:text-indigo-600 transition-colors">100%</span>
                <span class="text-sm text-slate-500">Stakeholder Approvals</span>
            </div>
            <div class="group cursor-default">
                <span class="block text-3xl font-bold text-slate-900 group-hover:text-indigo-600 transition-colors">1000+</span>
                <span class="text-sm text-slate-500">Customers Served</span>
            </div>
        </div>
    </section>

    <section id="work" class="py-24 overflow-hidden bg-slate-50/50 border-t border-b border-slate-100 scroll-mt-24 hover:pause">
        <div class="max-w-5xl mx-auto px-6 mb-16">
            <div class="flex items-center gap-4">
                <h2 class="text-sm font-bold text-slate-400 uppercase tracking-widest">Selected Works</h2>
                <div class="h-[1px] bg-slate-200 flex-grow"></div>
            </div>
        </div>
        
        <div class="flex w-max animate-scroll-heavy items-stretch gap-8 px-6 sm:px-12">
            
            {projects.map((project) => (
                <a href={project.link} class="group relative w-[85vw] md:w-[600px] flex-shrink-0 rounded-[2rem] overflow-hidden bg-white shadow-md hover:shadow-2xl transition-all duration-500 block ring-1 ring-slate-100 hover:ring-indigo-100 hover:-translate-y-1">
                    <div class="aspect-[16/9] overflow-hidden relative">
                        <img src={project.image} alt={project.title} class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-700" />
                        <div class="absolute inset-0 bg-slate-900/5 group-hover:bg-transparent transition-colors duration-300"></div>
                         <div class="absolute top-6 left-6 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wider text-slate-900">
                            {project.client}
                        </div>
                    </div>
                    <div class="p-8 md:p-10 relative">
                        <h3 class={`text-3xl md:text-4xl font-extrabold mb-4 ${project.color} transition-colors leading-tight`}>
                            {project.title}
                        </h3>
                        <p class="text-slate-600 text-lg leading-relaxed mb-8 max-w-xl">
                            {project.description}
                        </p>
                        <div class="flex flex-wrap gap-3">
                            {project.tags.map((tag) => (
                                <span class="px-4 py-2 bg-slate-100 text-sm font-semibold text-slate-700 rounded-full group-hover:bg-white group-hover:shadow-sm transition-all">
                                    {tag}
                                </span>
                            ))}
                        </div>
                         <div class="absolute bottom-10 right-10 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-4 group-hover:translate-x-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class={`feather feather-arrow-right ${project.color.replace('hover:', '')}`}><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                         </div>
                    </div>
                </a>
            ))}

            {projects.map((project) => (
                <a href={project.link} class="group relative w-[85vw] md:w-[600px] flex-shrink-0 rounded-[2rem] overflow-hidden bg-white shadow-md hover:shadow-2xl transition-all duration-500 block ring-1 ring-slate-100 hover:ring-indigo-100 hover:-translate-y-1">
                    <div class="aspect-[16/9] overflow-hidden relative">
                        <img src={project.image} alt={project.title} class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-700" />
                        <div class="absolute inset-0 bg-slate-900/5 group-hover:bg-transparent transition-colors duration-300"></div>
                        <div class="absolute top-6 left-6 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wider text-slate-900">
                            {project.client}
                        </div>
                    </div>
                    <div class="p-8 md:p-10 relative">
                        <h3 class={`text-3xl md:text-4xl font-extrabold mb-4 ${project.color} transition-colors leading-tight`}>
                            {project.title}
                        </h3>
                        <p class="text-slate-600 text-lg leading-relaxed mb-8 max-w-xl">
                            {project.description}
                        </p>
                        <div class="flex flex-wrap gap-3">
                            {project.tags.map((tag) => (
                                <span class="px-4 py-2 bg-slate-100 text-sm font-semibold text-slate-700 rounded-full group-hover:bg-white group-hover:shadow-sm transition-all">
                                    {tag}
                                </span>
                            ))}
                        </div>
                         <div class="absolute bottom-10 right-10 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-4 group-hover:translate-x-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class={`feather feather-arrow-right ${project.color.replace('hover:', '')}`}><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                         </div>
                    </div>
                </a>
            ))}

        </div>
    </section>

    <section class="py-24 bg-slate-50 border-t border-slate-200 overflow-hidden hover:pause">
        <div class="max-w-7xl mx-auto px-6 mb-16 text-center">
            <span class="font-mono text-sm text-slate-900 uppercase tracking-[0.2em] font-bold">Trusted By Market Leaders</span>
        </div>
        
        <div class="relative w-full overflow-hidden">
            <div class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-slate-50 to-transparent z-10"></div>
            <div class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-slate-50 to-transparent z-10"></div>

            <div class="flex w-max animate-scroll">
                <div class="flex items-center gap-20 px-10">
                    {brands.map((brand) => (
                        <img 
                            src={brand.logo} 
                            alt={brand.name} 
                            class="h-16 md:h-20 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity duration-300 grayscale hover:grayscale-0" 
                        />
                    ))}
                </div>
                <div class="flex items-center gap-20 px-10">
                    {brands.map((brand) => (
                        <img 
                            src={brand.logo} 
                            alt={brand.name} 
                            class="h-16 md:h-20 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity duration-300 grayscale hover:grayscale-0" 
                        />
                    ))}
                </div>
            </div>
        </div>
    </section>

</Layout>